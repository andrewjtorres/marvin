{
  "name": "marvin",
  "version": "0.1.0",
  "description": "The artificial intelligence afflicted with severe depression and boredom",
  "keywords": [
    "artificial-intelligence",
    "machine-learning",
    "natural-language-processing",
    "neural-network"
  ],
  "homepage": "https://github.com/ajtorres9/marvin#readme",
  "bugs": "https://github.com/ajtorres9/marvin/issues",
  "license": "MIT",
  "contributors": [
    "Andrew Torres <andrew.jonathan.torres@gmail.com> (https://andrewjtorr.es)",
    "Brian Lee <briandl92391@gmail.com> (https://brian-dlee.surge.sh)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajtorres9/marvin.git"
  },
  "scripts": {
    "lint": "yarn lint:files && lerna run --stream lint",
    "lint:files": "prettylint --ignore-path .gitignore \"**/*.{json,md,yml}\" \"!packages/**\"",
    "test": "lerna run --stream test"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.1.0",
    "lerna": "^3.18.4",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "prettier-plugin-toml": "^0.3.1",
    "prettylint": "^1.0.0"
  },
  "engines": {
    "node": ">=10.16",
    "yarn": ">=1.19"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna exec --concurrency 1 --stream lint-staged"
    }
  },
  "lint-staged": {
    "!(packages/**)*.{json,md,yml}": [
      "prettylint --fix",
      "git add"
    ]
  }
}
